<resources>

    <style name="LauncherTheme.Black" parent="@style/LauncherTheme">
        <item name="android:textColorPrimary">#FFFFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFFFF</item>
        <item name="android:textColorTertiary">#CCFFFFFF</item>
        <item name="android:textColorHint">#A0FFFFFF</item>
        <item name="android:colorControlHighlight">#A0FFFFFF</item>
        <item name="android:colorPrimary">@*android:color/black</item>
        <item name="allAppsScrimColor">@*android:color/black</item>
        <item name="allAppsInterimScrimAlpha">102</item>
        <item name="allAppsNavBarScrimColor">#80000000</item>
        <item name="popupColorPrimary">@*android:color/black</item>
        <item name="popupColorSecondary">@*android:color/black</item>
        <item name="popupColorTertiary">#757575</item> <!-- Gray 600 -->
        <item name="widgetsTheme">@style/WidgetContainerTheme.Black</item>
        <item name="isMainColorDark">true</item>
    </style>

    <style name="LauncherTheme.Black.DarkText" parent="@style/LauncherTheme.Black">
        <item name="allAppsInterimScrimAlpha">25</item>
        <item name="workspaceTextColor">#FF212121</item>
        <item name="workspaceShadowColor">@android:color/transparent</item>
        <item name="workspaceAmbientShadowColor">@android:color/transparent</item>
        <item name="workspaceKeyShadowColor">@android:color/transparent</item>
        <item name="isWorkspaceDarkText">true</item>
        <item name="workspaceStatusBarScrim">@null</item>
    </style>

    <style name="WidgetContainerTheme.Black" />

    <style name="AllAppsEmptySearchBackground.Black">
        <item name="android:colorPrimary">@*android:color/black</item>
        <item name="android:colorControlHighlight">#DFE1E5</item>
        <item name="android:colorForeground">@color/all_apps_bg_hand_fill_dark</item>
    </style>
</resources>
